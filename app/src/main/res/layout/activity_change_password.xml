<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.autokartz.autokartz.activities.ForgotPasswordActivity">


        <TextView
            android:id="@+id/choose_new_password_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_20"
            android:layout_marginRight="@dimen/mar_20"
            android:layout_marginTop="@dimen/mar_30"
            android:text="Choose a new password"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/mar_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/passwordlength_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/choose_new_password_tv"
            android:layout_marginLeft="@dimen/mar_20"
            android:layout_marginRight="@dimen/mar_20"
            android:layout_marginTop="@dimen/mar_30"
            android:text="Password must include atleast 7 character"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/dimen_16dp" />

        <EditText
            android:id="@+id/enter_newpassword_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordlength_tv"
            android:layout_marginLeft="@dimen/mar_20"
            android:layout_marginRight="@dimen/mar_20"
            android:layout_marginTop="@dimen/mar_30"
            android:background="@drawable/rectangle_border"
            android:hint="New Password"
            android:padding="@dimen/mar_8"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/enter_new_repassword_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_newpassword_et"
            android:layout_marginLeft="@dimen/mar_20"
            android:layout_marginRight="@dimen/mar_20"
            android:layout_marginTop="@dimen/mar_20"
            android:background="@drawable/rectangle_border"
            android:hint="Confirm Password"
            android:padding="@dimen/mar_8"
            android:textSize="18sp" />


        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_new_repassword_et"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/mar_20"
            android:layout_marginRight="@dimen/mar_20"
            android:layout_marginTop="@dimen/mar_40"
            android:background="@color/orange"
            android:padding="@dimen/mar_8"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
</ScrollView>