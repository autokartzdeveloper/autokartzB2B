<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/mar_2"
    android:layout_marginTop="@dimen/mar_2"
    android:background="#DCDCDC"
    android:orientation="horizontal"
    android:padding="@dimen/mar_10">

    <LinearLayout
        android:id="@+id/item_enquiry_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/enquiry_form_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:text="S.No."
            android:textColor="@color/appcolorornage"
            android:textSize="@dimen/textSize16sp" />

        <TextView
            android:id="@+id/enquiry_form_brand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Brand"
            android:textColor="@color/appcolorornage"
            android:textSize="@dimen/textSize16sp" />

        <TextView
            android:id="@+id/enquiry_form_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Date"
            android:textColor="@color/appcolorornage"
            android:textSize="@dimen/textSize16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notification_count_tv"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/circlenotification"
            android:gravity="center"
            android:padding="2dp"
            android:text="11"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize10sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>