<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mar_125"
    android:background="@drawable/navheader"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nav_firstletter_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/mar_10"
            android:background="@drawable/circle"
            android:paddingTop="@dimen/mar_8"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="@dimen/mar_30" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_displayname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_10"
            android:layout_marginTop="@dimen/mar_5"
            android:text=""
            android:textColor="@color/Black"
            android:textSize="@dimen/mar_15"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/nav_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_10"
            android:layout_marginTop="@dimen/mar_5"
            android:text=""
            android:textColor="@color/Black"
            android:textSize="@dimen/mar_15"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
