<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_chassis_number"
        style="@style/MyToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0.2dp"
        app:subtitleTextColor="@color/Blue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/mar_10">

        <TextView
            android:id="@+id/car_chassis_num_text_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mar_10"
            android:text="@string/enter_car_chassis_number"
            android:textAlignment="center"
            android:textColor="@color/appcolorblue"
            android:textSize="@dimen/textSize24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/car_chassis_num_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_50"
            android:layout_below="@+id/car_chassis_num_text_tv"
            android:layout_marginLeft="@dimen/mar_5"
            android:layout_marginRight="@dimen/mar_5"
            android:layout_marginTop="@dimen/mar_15"
            android:background="@drawable/et_border"
            android:inputType="textPhonetic"
            android:paddingLeft="@dimen/mar_5"
            android:textAllCaps="true"
            android:textSize="@dimen/textSize18sp" />

        <Button
            android:id="@+id/submit_car_chassis_num_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/mar_10"
            android:layout_marginLeft="@dimen/mar_5"
            android:layout_marginRight="@dimen/mar_5"
            android:layout_marginTop="@dimen/mar_20"
            android:background="@color/appcolorornage"
            android:text="@string/submit"
            android:textColor="@color/WhiteSmoke"
            android:textSize="@dimen/textSize22sp" />
    </RelativeLayout>
</LinearLayout>