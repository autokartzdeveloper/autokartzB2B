<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">@color/blue</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/Black</item>
        <item name="android:src">@drawable/ic_launcher_pencil</item>
        <item name="android:itemBackground">@color/Wheat</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyToolBar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:textAllCaps">false</item>
        <item name="android:actionMenuTextColor">@color/blue</item>
        <item name="android:background">@drawable/toolbar_background</item>
        <item name="android:textColor">@color/red</item>

    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/Black</item>
    </style>

    <style name="AppTheme.Green" parent="PayumoneyAppTheme">
        <item name="colorPrimary">@color/LightSkyBlue_b</item>
        <item name="colorPrimaryDark">@color/MediumPurple</item>
        <item name="colorAccent">@color/Chartreuse</item>
        <item name="colorButtonNormal">@color/MediumSlateBlue</item>
        <item name="alertDialogTheme">@style/AlertDialog.AppCompat.Light</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

</resources>
