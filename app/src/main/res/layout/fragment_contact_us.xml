<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_contact_us"
        style="@style/MyToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0.2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mar_10"
        android:layout_marginRight="@dimen/mar_10"
        android:orientation="vertical"
        android:padding="@dimen/mar_10">

        <LinearLayout
            android:id="@+id/linear_layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/phone_iv"
                    android:layout_width="@dimen/mar_30"
                    android:layout_height="@dimen/mar_30"
                    android:layout_marginTop="@dimen/mar_10"
                    android:src="@drawable/ic_phone" />

                <TextView
                    android:id="@+id/phone_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mar_10"
                    android:layout_marginTop="@dimen/mar_10"
                    android:layout_toRightOf="@+id/phone_iv"
                    android:text="Phone"
                    android:textColor="@color/appcolorblue"
                    android:textSize="@dimen/textSize20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/phone_val_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_text_tv"
                android:layout_marginTop="@dimen/mar_10"
                android:text="+91 9707997079"
                android:textSize="@dimen/textSize16sp" />
        </LinearLayout>


        <View
            android:id="@+id/phone_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_0_2"
            android:layout_below="@+id/phone_val_tv"
            android:layout_marginTop="@dimen/mar_10"
            android:background="@color/blue" />

        <LinearLayout
            android:id="@+id/linear_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/email_iv"
                    android:layout_width="@dimen/mar_30"
                    android:layout_height="@dimen/mar_30"
                    android:layout_below="@+id/phone_view"
                    android:layout_marginTop="@dimen/mar_10"
                    android:src="@drawable/ic_email" />

                <TextView
                    android:id="@+id/email_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone_view"
                    android:layout_marginLeft="@dimen/mar_10"
                    android:layout_marginTop="@dimen/mar_10"
                    android:layout_toRightOf="@+id/email_iv"
                    android:text="E-mail"
                    android:textColor="@color/appcolorblue"
                    android:textSize="@dimen/textSize20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/email_val_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_text_tv"
                android:layout_marginTop="@dimen/mar_10"
                android:text="info@autokartz.com"
                android:textSize="@dimen/textSize16sp" />

        </LinearLayout>

        <View
            android:id="@+id/email_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_0_2"
            android:layout_below="@+id/email_val_tv"
            android:layout_marginTop="@dimen/mar_10"
            android:background="@color/blue" />

    </LinearLayout>
</LinearLayout>