<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/mar_2"
    android:layout_marginTop="@dimen/mar_2"
    android:background="#DCDCDC"
    android:padding="@dimen/mar_10">

    <LinearLayout

        android:id="@+id/item_enquiry_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/enquiry_form_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S.No."
            android:textColor="@color/appcolorblue"
            android:textSize="@dimen/textSize16sp" />

        <TextView
            android:id="@+id/enquiry_form_brand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_20"
            android:layout_weight="4"
            android:text="Brand"
            android:textColor="@color/appcolorornage"
            android:textSize="@dimen/textSize16sp" />

        <TextView
            android:id="@+id/enquiry_form_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_20"
            android:layout_weight="4"
            android:text="Date"
            android:textColor="@color/appcolorornage"
            android:textSize="@dimen/textSize16sp" />

    </LinearLayout>


</RelativeLayout>