<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mar_5"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/category_car_part_add_et"
            android:layout_width="0dp"
            android:layout_height="@dimen/mar_50"
            android:layout_weight="5"
            android:background="@drawable/et_border"
            android:hint="Add Part Name"
            android:inputType="text"
            android:padding="@dimen/mar_10"
            android:textSize="@dimen/textSize18sp" />

        <ImageView
            android:id="@+id/category_car_part_detail_iv"
            android:layout_width="@dimen/mar_25"
            android:layout_height="@dimen/mar_25"
            android:layout_margin="@dimen/mar_10"
            android:layout_weight="0.2"
            android:visibility="gone"
            android:src="@drawable/ic_detail" />

        <ImageView
            android:id="@+id/category_car_part_delete_iv"
            android:layout_width="@dimen/mar_25"
            android:layout_height="@dimen/mar_25"
            android:layout_margin="@dimen/mar_10"
            android:layout_weight="0.2"
            android:src="@drawable/ic_close_black" />

    </LinearLayout>

</LinearLayout>