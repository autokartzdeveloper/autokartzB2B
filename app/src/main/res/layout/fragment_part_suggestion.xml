<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="unique_tag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/car_chassis_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_10"
            android:text="@string/car_chassis_number"
            android:textColor="@color/appcolorblue"
            android:textSize="@dimen/dimen_20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/car_chassis_number_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mar_10"
            android:layout_toRightOf="@+id/car_chassis_num_tv"
            android:gravity="end"
            android:paddingTop="@dimen/dimen_5dp"
            android:text="jdhfndfxmdhskncfs"
            android:textColor="@color/Black"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linerapart_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mar_10"
        android:layout_marginRight="@dimen/mar_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_brand_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/brand"
                android:textColor="@color/appcolorblue"
                android:textSize="@dimen/textSize20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_brand_val_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="jdhfndfxmdhskncfs"
                android:textColor="@color/Black"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_model_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/model"
                android:textColor="@color/appcolorblue"
                android:textSize="@dimen/textSize20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_model_val_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="jdhfndfxmdhskncfs"
                android:textColor="@color/Black"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_varient_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/variant"
                android:textColor="@color/appcolorblue"
                android:textSize="@dimen/textSize20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_varient_val_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="jdhfndfxmdhskncfs"
                android:textColor="@color/Black"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_engine_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/engine"
                android:textColor="@color/appcolorblue"
                android:textSize="@dimen/textSize20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_engine_val_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="jdhfndfxmdhskncfs"
                android:textColor="@color/Black"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/car_year_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/year"
                android:textColor="@color/appcolorblue"
                android:textSize="@dimen/textSize20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_year_val_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="jdhfndfxmdhskncfs"
                android:textColor="@color/Black"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linerapart_suggestion">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/mar_20">

            <RelativeLayout
                android:id="@+id/suggestion_data_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dimen_5dp">

                <TextView
                    android:id="@+id/part_suggestion_no_item_text_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="No Requirement Part Loaded Yet"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/textSize16sp"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/parts_list_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/suggestion_data_layout"
                android:layout_marginTop="@dimen/mar_20">

                <Button
                    android:id="@+id/update_form_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/mar_20"
                    android:layout_marginRight="@dimen/mar_10"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="Show Form"
                    android:textAllCaps="false"
                    android:textColor="@color/Blue"
                    android:textSize="@dimen/textSize16sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/submit_order_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/mar_10"
                    android:layout_marginRight="@dimen/mar_10"
                    android:layout_weight="1"
                    android:background="@color/appcolorornage"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize16sp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</LinearLayout>