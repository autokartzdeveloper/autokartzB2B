<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <LinearLayout
        android:id="@+id/order_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mar_10"
        android:layout_marginRight="@dimen/mar_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mar_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_detail_date_text_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order Date : "
                android:textColor="@color/appcolorblue"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_detail_date_val_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="25 Jan, 2018"
                android:textColor="@color/Black"
                android:textSize="@dimen/textSize16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mar_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_detail_order_id_text_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order Id : "
                android:textColor="@color/appcolorblue"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_detail_order_id_val_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2"
                android:textColor="@color/Black"
                android:textSize="@dimen/textSize16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mar_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_detail_status_text_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status : "
                android:textColor="@color/appcolorblue"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_detail_status_val_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text=""
                android:textColor="@color/Black"
                android:textSize="@dimen/textSize16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mar_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_detail_amt_text_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amount : "
                android:textColor="@color/appcolorblue"
                android:textSize="@dimen/textSize16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_detail_amt_val_tv"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2580.00"
                android:textColor="@color/Black"
                android:textSize="@dimen/textSize16sp" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/order_detail_items_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_detail_layout"
        android:layout_marginLeft="@dimen/mar_5"
        android:layout_marginRight="@dimen/mar_5"
        android:layout_marginTop="@dimen/mar_5" />

</RelativeLayout>