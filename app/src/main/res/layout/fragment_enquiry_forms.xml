<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/no_enquiry_form_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No Enquiry Forms Added Yet"
        android:textColor="@color/blue"
        android:textSize="@dimen/textSize24sp"
        android:textStyle="bold"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/mar_10"
        android:paddingTop="@dimen/mar_10">

        <TextView
            android:id="@+id/text_sr.no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_2"
            android:layout_weight="1"
            android:text="S.No"
            android:textColor="@color/appcolorblue"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_brand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_20"
            android:layout_weight="3"
            android:text="Brand"
            android:textColor="@color/appcolorblue"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mar_20"
            android:layout_weight="4"
            android:text="Enquiry Date"
            android:textColor="@color/appcolorblue"
            android:textSize="@dimen/textSize16sp"
            android:textStyle="bold" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        app:stackFromEnd="true"
        app:reverseLayout="true"
        android:id="@+id/enquiry_forms_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout1"
        android:layout_marginTop="@dimen/mar_0_2" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_enquiry_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginTop="@dimen/mar_1"
        android:src="@drawable/ic_add_white_24dp" />

</RelativeLayout>